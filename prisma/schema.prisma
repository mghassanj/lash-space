generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id              String        @id @default(cuid())
  name            String
  email           String?       @unique
  phone           String        @unique
  notes           String?
  skinType        String?
  allergies       String?
  dateOfBirth     String?
  completedVisits Int           @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  appointments    Appointment[]
}

model Service {
  id             String        @id @default(cuid())
  name           String
  nameAr         String        @default("")
  slug           String        @unique
  description    String
  descriptionAr  String        @default("")
  duration       Int
  price          Float
  category       String        // monthly, addon, half_set, other, retouch
  image          String?
  isActive       Boolean       @default(true)
  isAddOn        Boolean       @default(false)
  isRetouch      Boolean       @default(false)
  sortOrder      Int           @default(0)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  appointments   Appointment[]
}

model Appointment {
  id              String   @id @default(cuid())
  customerId      String
  serviceId       String
  date            DateTime
  endTime         DateTime
  status          String   @default("pending")
  notes           String?
  totalPrice      Float
  loyaltyDiscount Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  customer        Customer @relation(fields: [customerId], references: [id])
  service         Service  @relation(fields: [serviceId], references: [id])
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  titleAr     String    @default("")
  slug        String    @unique
  content     String
  contentAr   String    @default("")
  excerpt     String
  excerptAr   String    @default("")
  image       String?
  tags        String
  tagsAr      String    @default("")
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model BusinessSettings {
  id           String @id @default("default")
  businessName String @default("Lash Studio")
  phone        String @default("")
  email        String @default("")
  address      String @default("")
  city         String @default("")
  openingHours String @default("{}")
  socialLinks  String @default("{}")
  aboutText    String @default("")
  heroTagline  String @default("Elevate Your Natural Beauty")
}

model InventoryItem {
  id           String   @id @default(cuid())
  name         String
  nameAr       String   @default("")
  category     String   // lashes, adhesive, tools, care_products, other
  brand        String?
  sku          String?
  quantity     Int      @default(0)
  minQuantity  Int      @default(5)
  unit         String   @default("piece") // piece, ml, box, pack
  costPrice    Float?
  expiryDate   DateTime?
  notes        String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id          String   @id @default(cuid())
  name        String
  rating      Int      // 1-5
  comment     String
  serviceType String?
  approved    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WorkSchedule {
  id        String     @id @default(cuid())
  dayOfWeek Int        // 0=Sunday, 1=Monday... 6=Saturday
  isOpen    Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  timeSlots TimeSlot[]

  @@unique([dayOfWeek])
}

model TimeSlot {
  id             String       @id @default(cuid())
  workScheduleId String
  workSchedule   WorkSchedule @relation(fields: [workScheduleId], references: [id], onDelete: Cascade)
  time           String       // "09:00", "12:00", "15:00", "18:00"
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model DayOff {
  id        String   @id @default(cuid())
  date      DateTime // specific date to block
  reason    String?  // optional reason like "إجازة"
  createdAt DateTime @default(now())
}
